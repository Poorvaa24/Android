<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Currency Conversion Exchange"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/dollar_amt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="61dp"
        android:fontFamily="sans-serif-medium"
        android:text="Dollar Amount:" />

    <TextView
        android:id="@+id/dollar_amt_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="61dp"
        android:layout_toRightOf="@+id/dollar_amt_text" />

    <TextView
        android:id="@+id/convert_to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dollar_amt_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="51dp"
        android:fontFamily="sans-serif-medium"
        android:text="Convert To:" />

    <TextView
        android:id="@+id/convert_to_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dollar_amt_val"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="51dp"
        android:layout_toRightOf="@+id/convert_to_text" />

    <TextView
        android:id="@+id/exchange_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert_to_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif-medium"
        android:text="Converted value:" />

    <TextView
        android:id="@+id/exchange_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dollar_amt_val"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="101dp"
        android:layout_toRightOf="@+id/exchange_txt"
        android:text=" " />

    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert_to_text"
        android:layout_marginTop="61dp"
        android:background="@color/colorAccent"
        android:text="Apply" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convert_to_value"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="59dp"
        android:layout_toRightOf="@+id/apply"
        android:background="@color/colorPrimary"
        android:onClick="finishActivity"
        android:text="Close" />


</RelativeLayout>